{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ESNext",
    "lib": [
      "ES2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
		"alwaysStrict": true,
		"declaration": true,
		"outDir": "./lib",
		"sourceMap": true
	},
	"files": ["index.ts"],
	"include": [
		"core/*"
	],
	"exclude": [
		"node_modules",
		"test"
	]
}
